    <script src="./js/main.js"></script>
    <title>Course Detail | iLearn</title>
</head>
<body>
    {{!-- Nav --}}
    <div class="navr">
        {{>nav}}
    </div>
    {{!-- Nav --}}

    {{!-- Main Content --}}
    <div class="container" style="margin-top: 8rem;">
        <div class="row">
            <div class="col-md-4">
                <img src="../../images/guitar.jpg" class="card-img-top" alt="guitar">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Course Name: Learn Guitar</h5>
                    <p class="card-text">Description: Lorem ipsum, dolor sit amet consectetur adipisicing elit. Fugit, optio modi veritatis, 
                        veniam inventore voluptatibus sapiente nesciunt odio consectetur aliquam a ratione suscipit
                        ea! Consequuntur placeat laboriosam eaque est nesciunt?</p>
                    <p class="card-text">Duration: 10 Days</p>
                    <form action="" method="post">
                        <p class="card-text d-inline">Price: <small><del>&#8377 2000</del></small> <span class="font-weight-bolder">&#8377 200</span></p>
                        <button type="submit" class="btn btn-primary text-white font-weight-bolder float-right" name="buy">Buy Now</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">Lesson No.</th>
                        <th scope="col">Lesson Name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td scope="row">Introduction</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="foot" style="margin-top:50vh">
    {{!-- footer --}}
    {{>footer}}
    {{!-- footer --}}
    </div>
